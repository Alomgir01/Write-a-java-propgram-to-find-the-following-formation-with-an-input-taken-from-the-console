/* n=4
0
1 0
0 1 0
1 0 1 0
*/

import java.util.Scanner;
public class lab4 {
public static void main(String[] args) {
Scanner input = new Scanner(System.input);
int i,j;

int b = 0;
System.out.print("Enter the number: ");
int n = in.nextInt();
for(i=0;i&lt;n;i++)
{
if(i%2==0)
b = 0;
else
b = 1;
for(j=0;j&lt;=i;j++)
{
System.out.print(+b+" ");
if(b==0)
b = 1;
else
b = 0;
}
System.out.print("\n");
}
}
}
